    <!--更新用户聊天信息状态 -->
    <update id="updateCharInfoState" parameterType="java.lang.Integer" >
        update app_chatinfo set state=#{state,jdbcType=INTEGER} where msgId=#{msgId,jdbcType=INTEGER};
    </update>
    <!--添加用户群信息 -->
    <insert id="addGroup" parameterType="com.zcjd.app_server.model.Group">
        insert into app_group(create_user_id,group_name,group_img,group_describe)
            values(#{createUserId,jdbcType=CHAR}, #{groupName,jdbcType=CHAR}, #{groupImg,jdbcType=CHAR}, #{groupDesc,jdbcType=CHAR})
    </insert>
    <!--通过用户id获取其创建的群信息 -->
    <select id="getGroupByUserId" parameterType="string" resultMap="groupResultMap">
        select
        <include refid="Base_group_filed" />
        from app_group where create_user_id=#{userId,jdbcType=CHAR}
    </select>
    <!--通过用户id获取其加入的群信息 -->
    <select id="getGroupJoin" parameterType="string" resultMap="groupResultMap">
        select
        <include refid="Base_group_filed" />
        from app_group where id in (select group_id from app_group_user where user_id=#{userId,jdbcType=CHAR})
    </select>
    <insert id="addDeptContact" parameterType="string"  >
        insert  into app_contact(user_id,contact_user_id)values(#{currentUserId,jdbcType=CHAR},#{contactUserId,jdbcType=CHAR})
    </insert>
    <!--通过群号或者群名称查询群组-->
    <select id="getGroupByGroupIdOrName" parameterType="string" resultMap="groupResultMap">
            SELECT
        <include refid="Base_group_filed" />
             FROM app_group WHERE id=#{keyWord,jdbcType=CHAR} OR group_name like "%"#{keyWord,jdbcType=CHAR}"%"
    </select>
    <!--添加群用户-->
    <insert id="addGroupUser" parameterType="string">
        insert into app_group_user(group_id,user_id)values(#{groupId,jdbcType=CHAR},#{userId,jdbcType=CHAR})
    </insert>
