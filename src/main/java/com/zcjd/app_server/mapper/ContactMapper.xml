  <select id="selectContactsInfoById" parameterType="java.lang.String" resultType="com.zcjd.app_server.model.UserInfoPojo">
       select
			id,
			u_name,
			CASE when u.u_sex = '1' then '男'
				 when u.u_sex = '0' then '女'
				 end  u_sex,
			u_birthday,
			u_number,
			CASE when u.u_married= '1' then '已婚'
				 when u.u_married = '0' then '未婚'
				 end  u_married,
			u_card,
			u_nationality,
			u_birthplace,
			u_address,
			u_gradu_time,
			u_work_time,
			deptId,
			u_entry_time,
			u_regular_time,
			u_tel,
			u_phone,
			u_email,
			u_qq,
			u_remarks,
			create_id,
			del_state,
			create_time,
			CASE when u.lz_state = '1' then '已离职'
				 when u.lz_state = '0' then '未离职'
				 end lz_state,
			lz_time,
			lz_type,
			lz_remarks
		from 
			hr_user_info u  where id in(select contact_user_id from app_contact where user_id=#{id,jdbcType=VARCHAR});
   </select>
   <select id="selectAllDepartment" parameterType="java.lang.String" resultType="com.zcjd.app_server.model.DepartmentPojo">
     select 
			t.id,
		t.pid,
		t.d_name,	
		t.remarks,
		t.userId,
		t.tel,
		t.del_state,
		t.sort
		from 
			sys_department t
   </select>
